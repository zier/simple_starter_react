{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": "./node_modules/eslint-config-airbnb/.eslintrc",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "document": true,
    "window": true,
    "localStorage": true,
    "jest": true,
    "describe": true,
    "it": true,
    "expect": true,
    "beforeAll": true,
    "afterAll": true,
    "beforeEach": true,
    "afterEach": true
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "plugins": [
    "react", "import"
  ],
  "rules": {
    "semi": [
      "error",
      "never"
  ],
    "react/require-default-props": 0,
    "react/jsx-indent": [2, 4],
    "indent": [2, 4, { "SwitchCase": 1 }],
    "guard-for-in": 0,
    "max-len": 0,
    "no-nested-ternary": 0,
    "no-console": 0,
    "global-require": 0,
    "new-cap": 0,
    "no-constant-condition": 0,
    "consistent-return": 0,
    "arrow-body-style": 0,
    "class-methods-use-this": 0,
    "react/jsx-filename-extension": 0,
    "react/prefer-stateless-function": 0,
    "react/forbid-prop-types": 0,
    "jsx-a11y/label-has-for": 0,
    "import/prefer-default-export": 0,
    "import/imports-first": 0,
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
  }
}